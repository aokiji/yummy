{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "paths": {
      "~/*": [
        "src/*"
      ],
      "@/*": [
        "src/*"
      ]
    },
    "types": [
      "@types/node",
      "@nuxt/types",
      "@types/jest",
      "@types/webpack-env"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "test/unit/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".nuxt",
    "tmp",
    "dist"
  ]
}
